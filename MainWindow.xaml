<Window x:Class="ClockLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockLite"
        mc:Ignorable="d"
        Title="ClockLite" Height="300" Width="400" ResizeMode="CanResizeWithGrip">

    <!-- WindowStyle="None" AllowsTransparency="True" Background="Transparent"> -->
    <Grid>
        
        <Border Background="White">
            <Label Name="LabelTime" FontSize="80" FontFamily="{StaticResource FontDigital7}"
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

    </Grid>
</Window>