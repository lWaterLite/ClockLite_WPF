<Window x:Class="ClockLite.FixClock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClockLite"
        mc:Ignorable="d" ShowActivated="False"
        Deactivated="FixClock_OnDeactivated" ShowInTaskbar="False" Focusable="False" IsHitTestVisible="False" IsTabStop="False"
        Height="300" Width="400" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Label Name="LabelTime" FontSize="80" FontFamily="{StaticResource FontDigital7}"
             PreviewMouseDown="LabelTime_OnPreviewMouseDown"  HorizontalAlignment="Center" IsHitTestVisible="False" VerticalAlignment="Center" Focusable="False"/>
    </Grid>
</Window>
